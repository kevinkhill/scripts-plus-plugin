{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "env": {
    "es2020": true,
    "commonjs": true
  },
  "globals": {
    "clip": "readonly",
    "clr": "readonly",
    "Directory": "readonly",
    "DisplayTextInfo": "readonly",
    "File": "readonly",
    "Font": "readonly",
    "FontStyle": "readonly",
    "forms": "readonly",
    "host": "readonly",
    "http": "readonly",
    "MouseButtons": "readonly",
    "Point": "readonly",
    "PopupMenuInfoEx": "readonly",
    "PopupMenuItem": "readonly",
    "sp": "readonly",
    "WebBrowser": "readonly"
  },
  "plugins": [
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": "error"
  },
  "overrides": [
    {
      "files": [
        "./tools/**/*.js"
      ],
      "env": {
        "node": true
      }      
    }
  ]
}
